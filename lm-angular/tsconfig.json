{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "stripInternal": true,
    "allowJs": true,
    "strictNullChecks": false,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": "./examples",
    "paths": {
      "@angular/*": ["../node_modules/@angular/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "node",
      "uglify-js",
      "webpack"
    ]
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "annotateForClosureCompiler": true,
    "flatModuleId": "element-angular",
    "skipTemplateCodegen": true
  },
  "files": [
    "src/components/vup-angular.module.ts"
  ],
  "include": [
    "examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
  